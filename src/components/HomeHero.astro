---
import Section from './Section.astro'
import Button from './Button.astro'
import Card from './Card.astro'

---

<Section class="section home-hero-section" id="home_hero_section">
    <div class="hero-wrapper">
        <div>
            <header>
                <h1>
                    Adam Buschemia
                    <br />
                    Business Consultant
                </h1>
            </header>

            <p>
                Get help from Alex Moore, a professional business coach <br /> with advanced experience on growth and business scaling.
            </p>

            <div>
                <Button class="book-appointment-btn" href="#" buttonText="Book a Meeting" />
            </div>
        </div>
        <div>
           <img src="images/hero_image.png" alt="">
        </div>
    </div>

    <div class="container hero-cards-container">
        <Card class="card hero-card">
            <div class="hero-card-wrapper">
              <h3>
                Finance & Restructuring
              </h3>
              <p>
                Get help from Alex Moore, a professional business coach with advanced experience on growth and business scaling.
              </p>

              <div>
                <Button class="our-services-btn" buttonText="Our Services" />
              </div>
            </div>
        </Card>

        <Card class="card hero-card">
            <div class="hero-card-wrapper">
              <h3>
                Finance & Restructuring
              </h3>
              <p>
                Get help from Alex Moore, a professional business coach with advanced experience on growth and business scaling.
              </p>

              <div>
                <Button class="our-services-btn" buttonText="Our Services" />
              </div>
            </div>
        </Card>

        <Card class="card hero-card">
            <div class="hero-card-wrapper">
              <h3>
                Finance & Restructuring
              </h3>
              <p>
                Get help from Alex Moore, a professional business coach with advanced experience on growth and business scaling.
              </p>

              <div>
                <Button class="our-services-btn" buttonText="Our Services" />
              </div>
            </div>
        </Card>
    </div>
</Section>

<style>
    .hero-wrapper
    {
        display: flex;
        justify-content: space-between;
        height: 600px;
        background-color: #181818;
        overflow: hidden;
        /* padding-inline: max(1rem, 50% - var(--content-width) / 2); */

        & > *
        {
            flex: 1;
        }

        & div:first-child
        {
            position: relative;
            display: grid;
            place-content: center;
            

            & h1
            {
                font-size: calc(var(--heading-one-font-size) * 2);
                margin-top: -100px;
            }

            &::before
            {
                content: '';
                position: absolute;
                translate: -50% 100%;
                width: 200px;  
                height: 200px;
                background-image: url('images/pattern.png');
                background-size: cover;
                background-position: center;
            }

            &::after
            {
                content: '';
                position: absolute;
                translate: 850px -100%;
                width: 200px;  
                height: 200px;
                background-image: url('images/pattern.png');
                background-size: cover;
                background-position: center;
            }
        }

        & div h1, p
        {
            color: #fff;
        }

        & p
        {
            margin: 20px 0 50px 0;
            color: #fff;
        }

        & img
        {
            height: 100%;
            flex: 1;
        }
    }

   .container.hero-cards-container
   {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 0 200px;
        margin-top: -150px;

     
        & .hero-card-wrapper
        {
            display: flex;
            padding: 46px;
            flex-direction: column;
            justify-content: center;
            gap: 10px;
            color: #fff;
            background-color: rgba(38, 38, 38, 0.90);
            border: 1px solid rgba(255, 255, 255, 0.20);
            backdrop-filter: blur(16px);
            border-radius: calc(var(--base-border-radius) * 2);
            flex: 1 0 0;
        }

        .hero-card-wrapper :is(h3, p)
        {
            color: #fff;
        }

        .hero-card-wrapper p
        {
            margin: 10px 0 36px 0;
        }
   }
</style>