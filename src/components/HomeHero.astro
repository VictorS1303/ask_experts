---
import Section from './Section.astro'
import Button from './Button.astro'

// async const data = await fetch('https://raw.githubusercontent.com/VictorS1303/frontend-design/main/resources/json/employees.json')
//                 .then((res) => res.json()) 
---

<Section class="section home-hero-section" id="home_hero_section">
    <div class="hero-wrapper">
        <div>
            <header>
                <h1>
                    Adam Buschemia
                    <br />
                    Business Consultant
                </h1>
            </header>
            <p>
                Get help from Alex Moore, a professional business coach <br /> with advanced experience on growth and business scaling.
            </p>
            <Button class="btn book-appointment-btn" buttonText="Book a Meeting" />
        </div>
        <div>
            <h1>Hey</h1>
        </div>
    </div>
</Section>

<style>
    .hero-wrapper
    {
        display: flex;
        height: 400px;
        width: 100vw;
    }

    .hero-wrapper > div
    {
        display: grid;
        place-content: center;
        justify-content: center;
        min-height: 100%;
        padding: 0 120px;
        width: 100%;
        background-color: #181818;

        .hero-wrapper > div * + *
        {
            display: none;
            margin-top: 30px;
        }
        
    

        & header h1
        {
            margin-bottom: 20px;
            color: #fff;
            font-size: calc(var(--heading-one-font-size) * 2);
        }

        & p
        {
            color: #fff;
            text-wrap: wrap;
        }
    }
</style>