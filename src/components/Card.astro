---
const {className} = Astro.props
---

<article class:list={[className]}>
    <div>
        <slot />
    </div>
</article>

<style>
    article
    {
        display: flex;
        padding: 46px;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 10px;
        flex: 1 0 0;
        backdrop-filter: blur(20px);
        background-color: rgba(38, 38, 38, .6);
        height: 300px;
        width: 375px;
    }
</style>