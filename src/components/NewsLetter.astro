---
import Input from './Input.astro'

const {className, id} = Astro.props
---
<article class={className} id={id}>
    <div>
        <h1>
            Subscribe to our newsletter
        </h1>
        <p>
            Build stronger Customer Relationships with Consulta
        </p>
    </div>
    <div>
        <div>
            <Input class="e-mail-input" id="e-mail_input" placeholder="Enter E-mail" />
        </div>
        <button class="btn subscribe-btn">Subscribe</button>
    </div>
</article>

<style>
    article
    {
        position: relative;
        display: flex;
        align-items: start;
        justify-content: center;
        align-items: center;
        gap: 141px;
        width: 1200px;
        height: 252px;
        border-radius: calc(var(--base-border-radius) / 2);
        background-color: #181818;
        overflow: hidden;
    }

    article::before
    {
        content: '';
        position: absolute;
        top: 75%;
        right: -100px;
        width: 226.607px;
        height: 284.947px;
        transform: rotate(135deg);
        flex-shrink: 0;
        background: #4EAF4E;
        border-radius: calc(var(--base-border-radius) * 2);
    }

    h1
    {
        color: #fff;
        font-size: 35px;
        font-style: normal;
        font-weight: 700;
        line-height: 116%;
        margin-bottom: 10px;
    }
    
    p
    {
        color: #fff;
        font-size: 16px;
        font-style: normal;
        font-weight: 400;
        line-height: 147.5%;
    }


    article > div:last-child
    {
        display: flex;
        gap: 40px;
    }
</style>